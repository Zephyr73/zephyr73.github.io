<!doctype html>
<html lang="en">
  <head>
    <link
      rel="preload"
      href="/assets/fonts/JetBrainsMono-Regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/assets/fonts/JetBrainsMono-Bold.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    {% if description %}<meta name="description" content="{{ description }}" />{% endif %}

    <title>{{ title | default("Portfolio") }}</title>

    <!-- Restore saved theme before CSS loads to prevent FOUC -->
    <script>
      (function () {
        var t = localStorage.getItem('theme');
        if (t) document.documentElement.setAttribute('data-theme-pending', t);
      })();
    </script>

    <link href="/assets/css/style.css" rel="stylesheet" type="text/css" />
  </head>

  <!-- DYNAMIC BODY CLASSES: Allows you to style specific pages differently -->
  <body class="page {{ bodyClass }}" data-page="{{ pageId }}">

    <!-- MOBILE DRAWER -->
    {% include "drawer.njk" %}

    <!-- MAIN NAVIGATION -->
    {% include "navbar.njk" %}

    <!-- CONTENT INJECTION POINT -->
    <main class="page__content">
      {% if noMarkdownWrapper %}
        {{ content | safe }}
      {% else %}
        <!-- This wrapper ensures markdown styles apply to blog/project content -->
        <div class="markdown-content">
          {{ content | safe }}
        </div>
      {% endif %}
    </main>
    <script src="/assets/js/script.js"></script>
  </body>
</html>